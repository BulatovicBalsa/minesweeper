<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        <StackPanel x:Name="spMenu" Orientation="Vertical">
            <Button x:Name="btnBeginner" Content="Beginner" Click="menu_Click" Margin="0 10" ></Button>
            <Button x:Name="btnIntermediate" Content="Intermediate" Click="menu_Click" Margin="0 10"></Button>
            <Button x:Name="btnExpert" Content="Expert" Click="menu_Click" Margin="0 10"></Button>
        </StackPanel>

        <Grid x:Name="gridMain" Visibility="Hidden" Panel.ZIndex="2" Background="AliceBlue"></Grid>
        
    </Grid>
</Window>
